<!doctype html>
<html>
  <head>
    <link rel="stylesheet" href="static/index.css">
    <script src="static/index.js"></script>
  </head>
  <body class="container">
    <div id="info">
      <fieldset>
        <legend>Camera mode</legend>
        <div>
          <input type="radio" id="alwaysOn" name="cameraMode"/>
          <label for="alwaysOn">Always On</label>
        </div>
        <div>
          <input type="radio" id="automatic" name="cameraMode"/>
          <label for="automatic">Automatic</label>
        </div>
      </fieldset>
      <fieldset>
        <legend>System info</legend>
        <p id="space"></p>
        <p id="state"></p>
        <div id="sensors"></div>
      </fielset>
    </div>
    <div id="title">RPI Sentry</div>
    <div id="preview"></div>
    <div id="version">version 1.0</div>
    <script type="text/javascript">
      start(
        {{ requestSchemaJson | tojson }},
        {{ updateSchemaJson | tojson }},
      )
    </script>
  </body>
</html>
